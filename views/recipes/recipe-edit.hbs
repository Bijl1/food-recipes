<div class="edit-recipe-form">
    <h1>Edit Food Recipe</h1>

    <form action = "/recipes/{{recipe._id}}/update" method="POST">
        <div class="form-group">
            <label for="recipeName">Recipe Name:</label>
            <input type="text" id="recipeName" name="recipeName" value="{{recipe.recipeName}}">
        </div>

        <div class="form-group">
            <label for="recipeType">Recipe Type:</label>
            <input type="text" id="recipeType" name="recipeType" value="{{recipe.recipeType}}">
        </div>

        <div class="form-group">
            <label for="img">Image:</label>
            <input type="text" id="img" name="img" value="{{recipe.img}}">
        </div>

        <div class="form-group">
            <label for="theChef">Chef:</label>
            <select id="theChef" name="theChef">
                {{#each chefs}}
                    <option value="{{this._id}}" {{#isSelected this._id recipe.chef._id}}selected{{/isSelected}}>
                        {{this.name}}
                    </option>
                {{/each}}
            </select>
        </div>

        <div class="form-group">
            <label for="ingredients">Ingredients:</label>
            {{#each recipe.ingredients}}
                <input type="text" id="ingredients" name="ingredients" value="{{this}}">
            {{/each}}
        </div>

        <div class="form-group">
            <label for="instructions">Instructions:</label>
            <textarea id="instructions" name="instructions">{{recipe.instructions}}</textarea>
        </div>

        <button>Save Changes</button>
    </form>
</div>
</body>
</html>
